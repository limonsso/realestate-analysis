# Configuration MongoDB
MONGODB_SERVER_URL=localhost:27017
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_DATABASE_NAME=real_estate_analytics
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin
MONGODB_AUTH_MECHANISM=SCRAM-SHA-256

# Noms des collections MongoDB
MONGODB_PROPERTIES_COLLECTION=properties_2024
MONGODB_SUMMARIES_COLLECTION=summaries_2024
MONGODB_LOGS_COLLECTION=extraction_logs_2024

# Options de connexion MongoDB
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=0
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_CONNECT_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=5000

# Configuration du pipeline
PIPELINE_BATCH_SIZE=25
PIPELINE_MAX_CONCURRENT_REQUESTS=5
PIPELINE_MAX_RETRIES=3
PIPELINE_RETRY_DELAY=5

# Configuration du logging
LOG_LEVEL=INFO
LOG_FILE=logs/pipeline.log
LOG_FORMAT=json
LOG_MAX_FILE_SIZE=10MB
LOG_BACKUP_COUNT=5

# Configuration Centris
CENTRIS_MAX_PAGES=50
CENTRIS_DELAY_BETWEEN_REQUESTS=2
CENTRIS_TIMEOUT=30
CENTRIS_PRICE_MIN=100000
CENTRIS_PRICE_MAX=5000000
